{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "frontend",
    "frontend/**/*",
    "frontend-standalone",
    "frontend-standalone/**/*"
  ]
}
